<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Adminlte/css/adminlte.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">

                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="https://localhost:44371/Home/Admin" class="nav-link">Go Back to User Section</a>

                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link" href="https://localhost:44371/">Logout</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link active">
                                <i class="fa fa-user-circle"></i>
                                <p>
                                    &nbsp&nbspAdmin Pages
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Locations")" class="nav-link ">
                                        <i class="fa fa-map-marker"></i>&nbsp&nbsp
                                        <p>Manage Locations</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Chargers")" class="nav-link">
                                        <i class="fa fa-plug"></i>&nbsp&nbsp

                                        <p>Manage Chargers</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Connectors")" class="nav-link ">
                                        <i class="fa fa-cog"></i>&nbsp&nbsp
                                        <p>Manage Connectors</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Customers")" class="nav-link ">
                                        <i class="fa fa-users"></i>&nbsp&nbsp
                                        <p>Manage Customer</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Services")" class="nav-link ">
                                        <i class="fa fa-wrench"></i>&nbsp&nbsp
                                        <p>Manage Services</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Staticpages")" class="nav-link ">
                                        <i class="fa fa-file"></i>&nbsp&nbsp
                                        <p>Add Static Pages</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @* Content Header (Page header)*@
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                        </div>   @*/.col*@
                        <div class="col-sm-6">

                        </div> @*/.col*@
                    </div> @*/.row*@
                </div> @*/.container-fluid*@
            </div>
            @*/.content-header*@
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">

                    @RenderBody()


                </div><!-- /.container-fluid -->
            </div>
        </div>
        <!-- /.content-wrapper -->


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/adminlte/js")
    @RenderSection("scripts", required: false)
</body>
</html>
